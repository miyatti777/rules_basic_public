# 11. プロダクトロードマップ作成  ★NEW
#--------------------------------------------
  - trigger: "(ロードマップ作成|プロダクトロードマップ|リリース計画)"
    priority: high
    steps:
      # ① 既存資料から自動下書き
      - collect_flow_materials:
          query:
            doc_targets: "ロードマップ|roadmap"
            lookback_days: 30
          store_as: roadmap_pool
      - prefill_question_answers:
